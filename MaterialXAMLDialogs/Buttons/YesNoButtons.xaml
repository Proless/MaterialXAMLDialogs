<UserControl x:Class="MaterialXAMLDialogs.Buttons.YesNoButtons"
			 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
			 xmlns:local="clr-namespace:MaterialXAMLDialogs.Enums"
			 Height="32"
			 Width="160">
	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Defaults.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition />
			<ColumnDefinition />
		</Grid.ColumnDefinitions>
		<Button  Grid.Column="0"
				 Content="_No"
				 Margin="0 0 3 0"
				 Style="{DynamicResource MaterialDesignFlatButton}"
				 Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
				 CommandParameter="{x:Static local:DialogResult.No}" />
		<Button  Grid.Column="1"
				 Content="_Yes"
				 Margin="3 0 0 0"
				 Style="{DynamicResource MaterialDesignFlatButton}"
				 Command="{x:Static materialDesign:DialogHost.CloseDialogCommand}"
				 CommandParameter="{x:Static local:DialogResult.Yes}" />
	</Grid>
</UserControl>
