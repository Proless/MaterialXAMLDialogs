<Window x:Class="MaterialXAMLDialogs.Examples.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:views="clr-namespace:MaterialXAMLDialogs.Examples.Views"
		TextElement.Foreground="{DynamicResource MaterialDesignBody}"
		Background="{DynamicResource MaterialDesignPaper}"
		TextElement.FontWeight="Medium"
		TextElement.FontSize="14"
		FontFamily="{materialDesign:MaterialDesignFont}"
		mc:Ignorable="d"
		Title="MaterialXAMLDialogs.Examples"
		Height="550"
		Width="750">
	<materialDesign:DialogHost Identifier="Root"
							   CloseOnClickAway="True">
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition />
				<ColumnDefinition />
				<ColumnDefinition />
			</Grid.ColumnDefinitions>

			<views:AlertDialog Grid.Column="0" />
			<views:ProgressDialog Grid.Column="1" />
			<views:SelectionDialog Grid.Column="2" />

		</Grid>
	</materialDesign:DialogHost>
</Window>
